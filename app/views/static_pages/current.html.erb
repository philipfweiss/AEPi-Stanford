<div class="container" style="padding-left: 5%; padding-right: 5%; padding-bottom: 5%">
    <br>
    <div style="margin-bottom: -5px;" class="alert alert-success">To Contact Us: <a href="/contact-us"> Click Here. </a></div>

    <% counter = 0%>
    <% @brothers.each do |k,v|%>

    <% if v[:leadership]%>
            <div class="col-md-6">
                <div class="wrapper spec">
                    <div class="image-wrapper">
                        <img src=<%= v[:image] ? image_path(v[:image]) : "//cdn0.iconfinder.com/data/icons/user-pictures/100/male-256.png" %>  />
                       <div class="dis">
                           <h1 class="name"><%= k %> <%= v[:year]%></h1>
                           <p class="description"><%= v[:title] ? v[:title] : "　" %></p>
                       </div>

                    </div>
                </div>
            </div>
            <% next %>
    <% end %>

    <% if (counter+=1) % 3 == 1%>
        <div class="col-md-4">
            <div class="wrapper spec">
                <div class="image-wrapper">
                    <img src=<%= v[:image] ? image_path(v[:image]) : "//cdn0.iconfinder.com/data/icons/user-pictures/100/male-256.png" %>  />
                   <div class="dis">
                           <h1 class="name"><%= k %> <%= v[:year]%></h1>
                           <p class="description"><%= v[:title] ? v[:title] : "　" %></p>
                       </div>
                </div>
            </div>
        </div>
        <% elsif (counter % 3 == 2) %>
        <div class="col-md-4">
            <div class="wrapper spec">
                <div class="image-wrapper">
                    <img src=<%= v[:image] ? image_path(v[:image]) : "//cdn0.iconfinder.com/data/icons/user-pictures/100/male-256.png" %>  />
                     <div class="dis">
                           <h1 class="name"><%= k %> <%= v[:year]%></h1>
                           <p class="description"><%= v[:title] ? v[:title] : "　" %></p>
                       </div>
                </div>
            </div>
        <% elsif (counter % 3 ==  0) %>

        </div>
            <div class="col-md-4">
                <div class="wrapper spec">
                    <div class="image-wrapper">
                        <img src=<%= v[:image] ? image_path(v[:image]) : "//cdn0.iconfinder.com/data/icons/user-pictures/100/male-256.png" %>  />
                       <div class="dis">
                           <h1 class="name"><%= k %> <%= v[:year]%></h1>
                           <p class="description"><%= v[:title] ? v[:title] : "　" %></p>
                       </div>
                    </div>
                </div>
            </div>
        <%end %>
    <% end %>
</div>

<script>
    $('.dis').hover(function() {
        var $this = $(this);
        $this.data('initialText', $this.text());
        $this.text("I'm replaced!");
    },
        function() {
        var $this = $(this); // caching $(this)
        $this.text($this.data('initialText'));
    }
    )
</script>